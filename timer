<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <title>实验计时器</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; padding-top: 50px; }
    #timer { font-size: 48px; margin: 20px 0; }
    button { font-size: 20px; margin: 5px; padding: 10px 20px; }
  </style>
</head>
<body>
  <h1>实验计时器</h1>
  <div id="timer">10:00</div>
  <button onclick="startTimer()">开始</button>
  <button onclick="pauseTimer()">暂停</button>
  <button onclick="resetTimer()">重置</button>

  <script>
    let time = 600; // 10分钟
    let timerInterval;
    let isPaused = true;

    function updateTimerDisplay() {
      const minutes = Math.floor(time / 60);
      const seconds = time % 60;
      document.getElementById('timer').textContent =
        `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
    }

    function startTimer() {
      if (isPaused) {
        isPaused = false;
        timerInterval = setInterval(() => {
          if (time > 0) {
            time--;
            updateTimerDisplay();
          } else {
            clearInterval(timerInterval);
            alert('时间到！');
          }
        }, 1000);
      }
    }

    function pauseTimer() {
      isPaused = true;
      clearInterval(timerInterval);
    }

    function resetTimer() {
      pauseTimer();
      time = 600;
      updateTimerDisplay();
    }

    updateTimerDisplay();
  </script>
</body>
</html>
